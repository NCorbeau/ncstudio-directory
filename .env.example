# NocoDB Configuration
NOCODB_API_URL=http://localhost:8080/api/v1
NOCODB_AUTH_TOKEN=your-auth-token-here

# Webhook Security
WEBHOOK_SECRET=your-secure-webhook-secret

# Netlify Build Hook
# Create this in Netlify site settings > Build & deploy > Build hooks
NETLIFY_BUILD_HOOK=https://api.netlify.com/build_hooks/your-hook-id

# Vercel Deploy Hook
# Create this in Vercel project settings > Git > Deploy Hooks
VERCEL_DEPLOY_HOOK=https://api.vercel.com/v1/integrations/deploy/your-hook-id

# GitHub Actions Workflow Dispatch (for rebuilding via GitHub Actions)
GITHUB_WORKFLOW_DISPATCH_URL=https://api.github.com/repos/yourusername/your-repo/actions/workflows/rebuild.yml/dispatches
GITHUB_TOKEN=your-github-token

# Site Configuration
SITE_URL=http://localhost:3000

# Build Configuration
# Set to a specific directory ID to build only that directory
# Leave blank to build based on URL paths
CURRENT_DIRECTORY=