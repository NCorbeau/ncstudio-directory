---
// src/components/core/ListingCard.astro
// Generic listing card component that uses theme composition

import BaseListingCard from "@/components/core/BaseListingCard.astro";
import type { ListingData } from "@/types";

export interface Props {
  listing: ListingData;
  url: string;
  theme?: string;
}

const { listing, url, theme = 'default' } = Astro.props;
---

<BaseListingCard listing={listing} url={url} theme={theme} />