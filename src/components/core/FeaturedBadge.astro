---
export interface Props {
  theme?: string;
  position?: 'top-left' | 'top-right' | 'bottom-left' | 'bottom-right';
}

const { theme = 'default', position = 'top-right' } = Astro.props;
---

<span class={`featured-badge ${theme} ${position}`}>Featured</span>

<style>
  .featured-badge {
    position: absolute;
    background-color: var(--featured-bg, #f9a825);
    color: var(--featured-text, white);
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.35rem 0.9rem;
    border-radius: 20px;
    z-index: 1;
    font-style: normal;
  }
  
  /* Positioning */
  .top-left {
    top: 16px;
    left: 16px;
  }
  
  .top-right {
    top: 16px;
    right: 16px;
  }
  
  .bottom-left {
    bottom: 16px;
    left: 16px;
  }
  
  .bottom-right {
    bottom: 16px;
    right: 16px;
  }
  
  /* Theme variations */
  .nature {
    --featured-bg: var(--secondaryColor, #f9a825);
    --featured-text: var(--textColor, #2d3c2e);
  }
  
  .modern {
    --featured-bg: var(--primaryColor, #0070f3);
    --featured-text: white;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
  }
  
  .elegant {
    --featured-bg: var(--primaryColor, #9c7c38);
    --featured-text: white;
    font-style: italic;
  }
  
  .default {
    --featured-bg: var(--primaryColor, #3366cc);
    --featured-text: white;
    font-weight: 500;
  }
</style> 