    margin-bottom: 0.5rem;
  }
  
  .content {
    font-size: 1.1rem;
    line-height: 1.7;
  }
  
  .content h1 {
    font-size: 2rem;
    margin: 1.5rem 0 1rem;
  }
  
  .content h2 {
    font-size: 1.5rem;
    margin: 1.5rem 0 1rem;
  }
  
