// src/pages/[directory]/[slug].astro
---
import { getCollection } from 'astro:content';
import DirectoryLayout from '../../layouts/DirectoryLayout.astro';
import { generateListingSchema } from '../../utils/schema-generator';

// Generate all dynamic routes
export async function getStaticPaths() {
  const allListings = await getCollection('listings');
  const directories = await getCollection('directories');
  
  return allListings.map(listing => {
    const directoryId = listing.data.directory;
    const directoryData = directories.find(dir => dir.id === directoryId)?.data;
    
    if (!directoryData) {
      console.warn(`Directory data not found for listing: ${listing.slug}`);
      return null;
    }
    
    return {
      params: { 
        directory: directoryId,
        slug: listing.slug.replace(`${directoryId}/`, '') // Remove directory prefix from slug if present
      },
      props: { 
        listing,
        directoryData
      }
    };
  }).filter(Boolean); // Remove any null entries
}

// Get the listing data from props
const { listing, directoryData } = Astro.props;
const { directory } = Astro.params;

// Process the markdown content
const { Content } = await listing.render();

// Build the image gallery
const images = listing.data.images || [];

// Construct the canonical URL
const canonicalUrl = new URL(`/${directory}/${Astro.params.slug}`, Astro.site || 'http://localhost:3000').toString();

// Generate structured data for this listing
const structuredData = generateListingSchema(directory, listing.data, canonicalUrl);

// Generate breadcrumbs for this listing
const breadcrumbs = [
  {
    name: directoryData.name,
    url: `/${directory}/`
  }
];

// Add category breadcrumb if available
if (listing.data.category) {
  const categoryName = directoryData.categories.find(cat => cat.id === listing.data.category)?.name || listing.data.category;
  breadcrumbs.push({
    name: categoryName,
    url: `/${directory}/category/${listing.data.category}`
  });
}

// Add current page breadcrumb
breadcrumbs.push({
  name: listing.data.title,
  url: canonicalUrl
});
---

<DirectoryLayout
  title={`${listing.data.title} | ${directoryData.name}`}
  description={listing.data.description}
  directoryData={directoryData}
  canonicalUrl={canonicalUrl}
  structuredData={structuredData}
  breadcrumbs={breadcrumbs}
  image={images.length > 0 ? images[0] : undefined}
>
  <article class="listing-detail">
    <div class="container">
      <header class="listing-header">
        <h1>{listing.data.title}</h1>
        <p class="description">{listing.data.description}</p>
        
        {listing.data.category && (
          <div class="category">
            <a href={`/${directoryData.id}/category/${listing.data.category}`}>
              {directoryData.categories.find(cat => cat.id === listing.data.category)?.name || listing.data.category}
            </a>
          </div>
        )}
        
        {listing.data.tags && listing.data.tags.length > 0 && (
          <div class="tags">
            {listing.data.tags.map(tag => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
        
        {typeof listing.data.rating === 'number' && (
          <div class="rating">
            <div class="stars" style={`--rating: ${listing.data.rating}`}>
              <span class="sr-only">{listing.data.rating} out of 5 stars</span>
            </div>
          </div>
        )}
      </header>
      
      {images.length > 0 && (
        <div class="image-gallery">
          <div class="main-image">
            <img 
              src={images[0]} 
              alt={`Main image of ${listing.data.title}`}
              id="gallery-main" 
            />
          </div>
          
          {images.length > 1 && (
            <div class="thumbnails">
              {images.map((image, index) => (
                <button 
                  class={`thumbnail ${index === 0 ? 'active' : ''}`} 
                  data-index={index}
                  data-src={image}
                >
                  <img src={image} alt={`Thumbnail ${index + 1}`} />
                </button>
              ))}
            </div>
          )}
        </div>
      )}
      
      <div class="listing-info">
        <div class="info-sidebar">
          {listing.data.address && (
            <div class="info-section">
              <h3>Address</h3>
              <p>{listing.data.address}</p>
              
              <a 
                href={`https://maps.google.com/?q=${encodeURIComponent(listing.data.address)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="map-link"
              >
                View on Map
              </a>
            </div>
          )}
          
          {listing.data.website && (
            <div class="info-section">
              <h3>Website</h3>
              <a 
                href={listing.data.website}
                target="_blank"
                rel="noopener noreferrer"
                class="website-link"
              >
                Visit Website
              </a>
            </div>
          )}
          
          {listing.data.phone && (
            <div class="info-section">
              <h3>Phone</h3>
              <a href={`tel:${listing.data.phone}`}>{listing.data.phone}</a>
            </div>
          )}
          
          {listing.data.openingHours && listing.data.openingHours.length > 0 && (
            <div class="info-section">
              <h3>Opening Hours</h3>
              <ul class="hours-list">
                {listing.data.openingHours.map(timeSlot => (
                  <li>
                    <span class="day">{timeSlot.day}</span>
                    <span class="hours">{timeSlot.hours}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}
          
          {/* Display custom fields if available */}
          {listing.data.customFields && Object.keys(listing.data.customFields).length > 0 && (
            <div class="info-section">
              <h3>Additional Information</h3>
              <ul class="custom-fields">
                {Object.entries(listing.data.customFields).map(([key, value]) => (
                  <li>
                    <span class="label">{key.charAt(0).toUpperCase() + key.slice(1).replace(/([A-Z])/g, ' $1')}</span>
                    <span class="value">
                      {typeof value === 'boolean' 
                        ? (value ? 'Yes' : 'No')
                        : String(value)
                      }
                    </span>
                  </li>
                ))}
              </ul>
            </div>
          )}
        </div>
        
        <div class="content">
          <Content />
        </div>
      </div>
    </div>
  </article>
</DirectoryLayout>

<script>
  // Image gallery functionality
  document.addEventListener('DOMContentLoaded', () => {
    const mainImage = document.getElementById('gallery-main');
    const thumbnails = document.querySelectorAll('.thumbnail');
    
    thumbnails.forEach(thumb => {
      thumb.addEventListener('click', () => {
        // Update active state
        thumbnails.forEach(t => t.classList.remove('active'));
        thumb.classList.add('active');
        
        // Update main image
        if (mainImage) {
          mainImage.src = thumb.getAttribute('data-src') || '';
        }
      });
    });
  });
</script>

<style>
