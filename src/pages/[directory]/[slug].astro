    border-radius: 4px;
    margin: 1.5rem 0;
  }
  
  .content ul, 
  .content ol {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }
  
  .map-link,
  .website-link {
    display: inline-block;
    margin-top: 0.5rem;
    color: var(--primaryColor);
    text-decoration: none;
  }
  
  .map-link:hover,
  .website-link:hover {
    text-decoration: underline;
  }
  
  @media (max-width: 768px) {
    .listing-info {
      grid-template-columns: 1fr;
    }
    
    .listing-header h1 {
      font-size: 2rem;
    }
    
    .main-image {
      height: 300px;
    }
  }
</style>
